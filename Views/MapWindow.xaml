<Window x:Class="OrgnTransplant.Views.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="🗺️ Маршрут на транспорт"
        Height="750"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundGradient}"
        Loaded="Window_Loaded">

    <Grid>
        <!-- Main Content with Rounded Border -->
        <Border Margin="20"
                CornerRadius="25"
                Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000"
                                  BlurRadius="40"
                                  ShadowDepth="0"
                                  Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        CornerRadius="25,25,0,0"
                        Padding="30,25">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4FACFE" Offset="0"/>
                            <GradientStop Color="#00F2FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#4FACFE"
                                          BlurRadius="20"
                                          ShadowDepth="0"
                                          Opacity="0.5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="🗺️ МАРШРУТ НА ТРАНСПОРТ"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="White">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#000000"
                                                      BlurRadius="10"
                                                      ShadowDepth="2"
                                                      Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="RouteDescriptionText"
                                       Text="Визуализация на маршрута за транспорт на органа"
                                       FontSize="14"
                                       Foreground="White"
                                       Opacity="0.95"
                                       Margin="0,8,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="✖ Затвори"
                                Click="Close_Click"
                                Background="White"
                                Foreground="#4FACFE"
                                BorderThickness="0"
                                Padding="20,12"
                                Cursor="Hand"
                                FontSize="14"
                                FontWeight="Bold"
                                VerticalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="12"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- WebView2 for Map -->
                <Border Grid.Row="1"
                        Margin="0"
                        Background="White">
                    <wv2:WebView2 x:Name="MapWebView"
                                  DefaultBackgroundColor="Transparent"/>
                </Border>

                <!-- Footer with Info -->
                <Border Grid.Row="2"
                        Background="#F8F9FA"
                        Padding="25,20"
                        CornerRadius="0,0,25,25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal">
                            <Border Background="#E8F5E9"
                                    CornerRadius="10"
                                    Padding="15,10"
                                    Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏥"
                                               FontSize="18"
                                               Margin="0,0,8,0"/>
                                    <TextBlock x:Name="FromHospitalText"
                                               Text="Начална болница"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="→"
                                       FontSize="24"
                                       Foreground="#667EEA"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>

                            <Border Background="#E3F2FD"
                                    CornerRadius="10"
                                    Padding="15,10"
                                    Margin="15,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏥"
                                               FontSize="18"
                                               Margin="0,0,8,0"/>
                                    <TextBlock x:Name="ToHospitalText"
                                               Text="Целева болница"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal">
                            <Border CornerRadius="10"
                                    Padding="15,10"
                                    Margin="0,0,10,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#667EEA" Offset="0"/>
                                        <GradientStop Color="#764BA2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📏"
                                               FontSize="16"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="OpenStreetMap"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
