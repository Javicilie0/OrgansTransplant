<Window x:Class="OrgnTransplant.Views.RespondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отговор на заявка" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundGradient}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Custom Radio Button Card Style -->
        <Style x:Key="RadioCard" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="CardBorder"
                                Background="#20FFFFFF"
                                BorderBrush="{StaticResource PurpleGradient}"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="20"
                                Margin="0,0,0,15"
                                Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="24"
                                        Height="24"
                                        CornerRadius="12"
                                        BorderThickness="2"
                                        BorderBrush="{StaticResource PurpleGradient}"
                                        Background="Transparent"
                                        Margin="0,0,15,0">
                                    <Ellipse x:Name="CheckMark"
                                             Width="12"
                                             Height="12"
                                             Fill="{StaticResource PurpleGradient}"
                                             Visibility="Collapsed"/>
                                </Border>

                                <ContentPresenter Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding Content}"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CardBorder" Property="Background" Value="#40667EEA"/>
                                <Setter TargetName="CardBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667EEA" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Gradient Header -->
        <Border Height="120" VerticalAlignment="Top">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667EEA" Offset="0"/>
                    <GradientStop Color="#764BA2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center" Margin="40,0">
                <TextBlock x:Name="TitleText"
                           Text="✅ ПРИЕМАНЕ НА ЗАЯВКА"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="OrganInfoText"
                           Text=""
                           FontSize="14"
                           Foreground="#E8E8FF"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="40,120,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Form Content -->
            <Border Grid.Row="0"
                    Background="#20FFFFFF"
                    CornerRadius="15"
                    Padding="35">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="5" Opacity="0.2"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Delivery Options Section -->
                        <TextBlock Text="КАК ЩЕ БЪДЕ ПРЕДОСТАВЕН ОРГАНЪТ?"
                                   Style="{StaticResource SectionHeader}"
                                   Margin="0,0,0,20"/>

                        <RadioButton x:Name="WithDriverRadio"
                                     GroupName="DeliveryOptions"
                                     Style="{StaticResource RadioCard}"
                                     IsChecked="True">
                            <StackPanel>
                                <TextBlock Text="🚗 С шофьор - ще предоставим транспорт"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Осигуряваме медицински транспорт за доставка на органа"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="WithHelicopterRadio"
                                     GroupName="DeliveryOptions"
                                     Style="{StaticResource RadioCard}">
                            <StackPanel>
                                <TextBlock Text="🚁 С хеликоптер - спешна въздушна доставка"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Най-бърз вариант за критични случаи - въздушна медицинска транспортировка"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="PickupRequiredRadio"
                                     GroupName="DeliveryOptions"
                                     Style="{StaticResource RadioCard}">
                            <StackPanel>
                                <TextBlock Text="🚶 Необходимо е вземане - лично трябва да се дойде"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Вашият екип трябва да дойде на място за вземане на органа"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <!-- Additional Information Section -->
                        <TextBlock Text="ДОПЪЛНИТЕЛНА ИНФОРМАЦИЯ"
                                   Style="{StaticResource SectionHeader}"
                                   Margin="0,25,0,15"/>

                        <TextBox x:Name="ResponseTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Height="140"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="(Опционално - въведете допълнителна информация, инструкции или забележки)"
                                   FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,25,0,0">
                <Button Content="ОТКАЗ"
                        Style="{StaticResource SecondaryButton}"
                        Width="140"
                        Click="Cancel_Click"
                        Margin="0,0,15,0"/>
                <Button Content="ИЗПРАТИ"
                        Style="{StaticResource SuccessButton}"
                        Width="140"
                        Click="Send_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
