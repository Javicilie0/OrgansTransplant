<Window x:Class="OrgnTransplant.MessagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📬 Поща" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Стил за бутони -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стил за таб бутони -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8,8,0,0"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,0,5,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стил за активен таб -->
        <Style x:Key="ActiveTabButton" TargetType="Button" BasedOn="{StaticResource TabButton}">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Хедър -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📬 Поща" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock x:Name="HospitalNameText" Text="" FontSize="14" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="🔄 Обнови" Style="{StaticResource ModernButton}" Click="RefreshMessages_Click"/>
            </Grid>
        </Border>

        <!-- Табове -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,0">
            <Button x:Name="InboxTabButton" Content="📥 Входящи" Style="{StaticResource ActiveTabButton}" Click="ShowInbox_Click"/>
            <Button x:Name="OutboxTabButton" Content="📤 Изходящи" Style="{StaticResource TabButton}" Click="ShowOutbox_Click"/>
        </StackPanel>

        <!-- Съдържание -->
        <Border Grid.Row="2" Background="White" CornerRadius="0,10,10,10" Padding="0">
            <Grid>
                <!-- Входящи съобщения -->
                <Grid x:Name="InboxGrid" Visibility="Visible">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="InboxMessagesPanel" Margin="20"/>
                    </ScrollViewer>

                    <!-- Празно състояние -->
                    <StackPanel x:Name="InboxEmptyState" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                        <TextBlock Text="📭" FontSize="80" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="Няма входящи съобщения" FontSize="18" Foreground="#95A5A6" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Изходящи съобщения -->
                <Grid x:Name="OutboxGrid" Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="OutboxMessagesPanel" Margin="20"/>
                    </ScrollViewer>

                    <!-- Празно състояние -->
                    <StackPanel x:Name="OutboxEmptyState" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                        <TextBlock Text="📭" FontSize="80" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="Няма изходящи съобщения" FontSize="18" Foreground="#95A5A6" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
