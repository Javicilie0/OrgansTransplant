<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!--
      IMPORTANT: This is an example configuration file.
      Copy this file to App.config and replace with your actual database credentials.

      Never commit App.config to version control!
    -->
    <add name="OrganTransplantDB"
         connectionString="Server=your-server-address;Port=3306;Database=your-database-name;User Id=your-username;Password=your-password;"
         providerName="MySql.Data.MySqlClient" />
  </connectionStrings>

  <appSettings>
    <!-- Logging settings -->
    <add key="EnableLogging" value="true" />
    <add key="LogFilePath" value="Logs\OrganTransplant.log" />
    <add key="LogLevel" value="Info" /> <!-- Debug, Info, Warning, Error -->

    <!-- Application settings -->
    <add key="MaxApiRetries" value="3" />
    <add key="ApiTimeout" value="10" />
  </appSettings>
</configuration>
